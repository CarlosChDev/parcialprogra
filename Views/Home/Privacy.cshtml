@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

@model IEnumerable<parcialprogra.Models.Transaccion>

@{
    ViewData["Title"] = "Lista de Transacciones";
}

<h1>Lista de Transacciones</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Remitente</th>
            <th>Destinatario</th>
            <th>País de Origen</th>
            <th>País de Destino</th>
            <th>Monto Enviado</th>
            <th>Moneda</th>
            <th>Monto Final</th>
            <th>Estado</th>
            <th>Fecha de Transacción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaccion in Model)
        {
            <tr>
                <td>@transaccion.Id</td>
                <td>@transaccion.Remitente</td>
                <td>@transaccion.Destinatario</td>
                <td>@transaccion.PaisOrigen</td>
                <td>@transaccion.PaisDestino</td>
                <td>@transaccion.MontoEnviado</td>
                <td>@transaccion.Moneda</td>
                <td>@transaccion.MontoFinal</td>
                <td>@transaccion.Estado</td>
                <td>@transaccion.FechaTransaccion.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Transaccion" asp-action="Index">Crear Nueva Transacción</a>
